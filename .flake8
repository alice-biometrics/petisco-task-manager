[flake8]
exclude =
    # No need to traverse our git directory
    .git,
    # There's no value in checking cache directories
    __pycache__,
    # The conf file is mostly autogenerated, ignore it
    docs/conf.py,
    #Â Necessary to work with swagger,
    # conftest
    tests/conftest.py
    taskmanager/src/config/config_persistence.py


max-line-length = 110

select = C,E,F,W,B,B950
ignore = E501, W503, W606, E722 # E722 and W606 provisional